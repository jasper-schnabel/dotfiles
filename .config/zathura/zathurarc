# zathura config

# background and foreground
set default-bg '#1C1C1C'
set default-fg '#EFF0EB'

# background and foreground for statusbar
set statusbar-bg '#282A36'
set statusbar-fg '#EFF0EB'

# background and foreground for command line
set inputbar-bg '#282A36'
set inputbar-fg '#EFF0EB'

# background and foreground for completion menu
set completion-bg '#282A36'
set completion-fg '#EFF0EB'

# background and foreground for highlighted item in completion menu
set completion-highlight-bg '#005FD7'
set completion-highlight-fg '#282A36'

# background and foreground for group in completion menu
set completion-group-bg '#1C1C1C'
set completion-group-fg '#EFF0EB'

# use the system clipboard
set selection-clipboard clipboard

# hide the statusbar
set guioptions ''

# next, previous
map > navigate next
map < navigate previous

# half up, half down
map u scroll half-up
map d scroll half-down
