# sxhkd config

# terminal
super + Return
  $TERMINAL

# program launcher
super + d
  rofi -show run

# file manager
# super + e
#   file manager

# browser
super + w
  $BROWSER

# libreoffice
super + u
  libreoffice

# keepass
super + shift + u
  keepassxc

# signal
super + t
  signal-desktop

# telegram
super + shift + t
  telegram-desktop

# gimp
super + v
  gimp

# darktable
super + shift + v
  darktable

# musicplayer
super + m
  alacritty -e ncmpcpp

# sound mixer
super + shift + m
  alacritty -e pulsemixer

# power menu
XF86Tools
  ~/.local/share/bin/rofi/rofi-power

# kill menu
super + shift + i
  ~/.local/share/bin/rofi/rofi-kill

# clipboard menu
super + c
  rofi -show clipboard

# lock the screen
XF86Display
  physlock

# networking
XF86WLAN
  NM_STATUS=`nmcli networking`; if [ $NM_STATUS = "enabled" ]; then nmcli networking off; else nmcli networking on; fi

# screenshot
Print
  ~/.local/share/bin/shot

# screenshot (select screen snippet)
super + Print
  ~/.local/share/bin/shot -s

# close notifications
super + n
  dunstctl close

# close all notifications
super + shift + n
  dunstctl close-all

# show notification history
super + a
  dunstctl history-pop

# dunst context menu
super + shift + a
  dunstctl action

# mpd toggle pause
XF86Favorites
  mpc toggle && notify-send "Now Playing" "`mpc current -f '%artist% - %title%'`"

# mpd next track
super + greater
  mpc next

# mpd previos track
super + less
  mpc prev

# increase brightness
XF86MonBrightnessUp
  ~/.local/share/bin/bright -i

# decrease brightness
XF86MonBrightnessDown
  ~/.local/share/bin/bright -d

# increase volume
XF86AudioRaiseVolume
  ~/.local/share/bin/volume -i

# decrease volume
XF86AudioLowerVolume
  ~/.local/share/bin/volume -d

# toggle mute
XF86AudioMute
  ~/.local/share/bin/volume -m

# toggle mute microphone
XF86AudioMicMute
  ~/.local/share/bin/micro
