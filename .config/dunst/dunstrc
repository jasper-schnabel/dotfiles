# dunst config

[global]

# monitor
monitor = 0

# focus follow rule
# possible values are: 
#   mouse
#   keyboard
#   none
follow = mouse

# geometry [{width}]x{height}[+/-{x-offset}+/-{y-offset}]
# height is measured in number of notifications everything else in pixels
geometry = "450x6-20+20"

# progess bar
progress_bar = true

# height (includes the frame)
progress_bar_height = 14

# frame width
progress_bar_frame_width = 2

# minimum width
progress_bar_min_width = 200

# maximum width
progress_bar_max_width = 300

# indicate hidden messages
indicate_hidden = yes

# shrink window if it's smaller than the width
shrink = yes

# transparency [0-100]
transparency = 0

# height
# notification_height = 0

# padding text and separator
padding = 14

# horizontal padding
horizontal_padding = 14

# padding text and icon
text_icon_padding = 0

# frame
frame_width = 2

# frame color
frame_color = "#1DA1F2"

# corner radius
corner_radius = 0

# separator
separator_height = 2

# separator color
# possible values are:
#   auto: tries to find a color fitting to the background
#   foreground: same color as foreground
#   frame: same color as frame
#   hex value
separator_color = frame

# sort by urgency
sort = yes

# don't remove messages if the user is idle
idle_threshold = 120

# font
font = FiraCode 10

# line height
# line_height = 0

# formatting
# possible values are:
#   full: small subset of html
#   no: disable markup
markup = full

# message format
# possible values are:
#   %a: appname
#   %s: summary
#   %b: body
#   %i: iconname (including its path)
#   %I: iconname (without its path)
#   %p: progress value if set ([0%] to [100%]) or nothing
#   %n: progress value if set without any extra characters
#   %%: literal %
format = "<b>%s</b>\n%b"

# alignment of text
# possible values are:
#   left
#   center
#   right
alignment = left

# vertical alignment of text and icon
# possible values are:
#   top
#   center
#   bottom
vertical_alignment = center

# show age of message after:
show_age_threshold = 60

# word wrap
word_wrap = yes

# where to make an ellipsis when word wrap is off
# possible values are:
#   start
#   middle
#   end
# ellipsize = middle

# ignore newlines
ignore_newline = no

# stack duplicates
stack_duplicates = true

# hide duplicate count
hide_duplicate_count = false

# indicators for URLs (U) and actions (A)
show_indicators = yes

# icon position
# Possible values are:
#   left
#   right
#   off
icon_position = left

# minimum icon size
min_icon_size = 25

# maximum icon size
max_icon_size = 25

# Paths to default icons.
icon_path = ~/.local/share/icons/

# sticky history or normal timeout
sticky_history = yes

# history length
history_length = 40

# dmenu path
dmenu = /usr/bin/dmenu -p dunst:

# browser path
browser = /usr/bin/firefox -new-tab

# always run, even if suppressed
# always_run_script = true

# window title
title = Dunst

# window class
class = dunst

# startup notification
startup_notification = false

# verbosity
# possible values are:
#   crit: critical features
#   warn: only non-fatal warnings
#   mesg: important Messages
#   info: all unimportant stuff
#   debug: all less than unimportant stuff
verbosity = mesg

# Xinerama instead of RandR
# force_xinerama = false

# mouse
# possible values are:
#   none
#   do_action
#   close_current
#   close_all
mouse_left_click = do_action
mouse_middle_click = close_all
mouse_right_click = close_current

[experimental]

# calculate dpi to use on a per-monitor basis
# per_monitor_dpi = false

[shortcuts]

# close
close = mod4+n

# close all
close_all = mod4+shift+n

# history
history = mod4+shift+a

# context menu
context = mod4+a

[urgency_low]

background = "#1E1E1E"
foreground = "#C7CFDE"
frame_color = "#9CDCFE"
timeout = 15
# icon = ~/.local/share/icons/dunst-low.png

[urgency_normal]

background = "#1E1E1E"
foreground = "#C7CFDE"
frame_color = "#1DA1F2"
timeout = 15
# icon = ~/.local/share/icons/dunst-normal.png

[urgency_critical]

background = "#1E1E1E"
foreground = "#F44747"
frame_color = "#F44747"
timeout = 0
# icon = ~/.local/share/icons/dunst-critical.png
