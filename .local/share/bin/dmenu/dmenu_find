#!/bin/sh

if [ "$1" = "-h" ] || [ "$1" = "--help" ] || [ -n "$1" ]; then
  cat <<EOF
\$ dmenu_find [FLAGS]
Issue a find command.

Flags:
  -h: this menu, --help shows this too
EOF
  exit 1
fi

command -v dmenu >/dev/null || { echo "error: dmenu is not installed, exiting..."; exit 1; }
command -v fd >/dev/null || { echo "error: fd is not installed, exiting..."; exit 1; }

`dmenu_path | dmenu -c -l 5 -bw 3 -ww 400 -p "program to use:"` `fd -H | dmenu -c -l 5 -bw 3 -ww 600 -p "find:"` &
